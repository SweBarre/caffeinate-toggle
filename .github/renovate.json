{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeMinor",
    "group:allNonMajor"
  ],
  "timezone": "Europe/Stockholm",
  "schedule": ["after 10pm and before 6am on every weekday"],
  "labels": ["dependencies"],
  "assignees": ["SweBarre"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "Go dependencies",
      "automerge": true,
      "stabilityDays": 2
    },
  ],
  "enabledManagers": [
    "gomod",
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}

